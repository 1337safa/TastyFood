<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    android:orientation="vertical">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_food_by_category_icon"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:padding="1dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/twenty_four_corners_image_view"
        app:strokeColor="@color/gray"
        app:strokeWidth="1dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_favourite_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:elevation="0dp"
        app:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/img_food_by_category_icon"
        app:layout_constraintEnd_toEndOf="@+id/img_food_by_category_icon"
        app:layout_constraintTop_toBottomOf="@+id/img_food_by_category_icon"
        app:rippleColor="@color/green"
        app:srcCompat="@drawable/ic_favorite_food_for_custom_check_box_user_favourite_food_not_completed"
        app:tint="@color/green"
        tools:ignore="SpeakableTextPresentCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>